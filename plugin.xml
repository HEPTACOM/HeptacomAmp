    <changelog version="1.0.1">
        <changes lang="de">Konflikte mit anderen Plugins behoben. Außerdem kleinere Bugfixes.</changes>
    </changelog>
    <changelog version="1.0.2">
        <changes lang="de">Template-Konflikte behoben.</changes>
